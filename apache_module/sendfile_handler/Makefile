##
##  Makefile -- Build procedure for sample sendfile_handler Apache module
##  Autogenerated via ``apxs -n sendfile_handler -g''.
##

#   the used tools
APXS=apxs
APACHECTL=apachectl

#   additional user defines, includes and libraries
#DEF=-Dmy_define=my_value
#INC=-Imy/include/dir
#LIB=-Lmy/lib/dir -lmylib

#   the default target
all: mod_sendfile_handler.so

#   compile the DSO file
mod_sendfile_handler.so: mod_sendfile_handler.c
	$(APXS) -c $(DEF) $(INC) $(LIB) mod_sendfile_handler.c

#   install the DSO file into the Apache installation
#   and activate it in the Apache configuration
install: all
	$(APXS) -i -a -n 'sendfile_handler' mod_sendfile_handler.so

#   cleanup
clean:
	-rm -f mod_sendfile_handler.o mod_sendfile_handler.so

#   simple test
test: reload
	lynx -mime_header http://localhost/sendfile_handler

#   reload the module by installing and restarting Apache
reload: install restart

#   the general Apache start/restart/stop procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

