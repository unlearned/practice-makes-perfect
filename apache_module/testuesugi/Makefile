##
##  Makefile -- Build procedure for sample testuesugi Apache module
##  Autogenerated via ``apxs -n testuesugi -g''.
##

#   the used tools
APXS=$(HOME)/development/apache/sbin/apxs
APACHECTL=apachectl

#   additional user defines, includes and libraries
#DEF=-Dmy_define=my_value
#INC=-Imy/include/dir
#LIB=-Lmy/lib/dir -lmylib

#   the default target
all: mod_testuesugi.so

#   compile the DSO file
mod_testuesugi.so: mod_testuesugi.c
	$(APXS) -c $(DEF) $(INC) $(LIB) mod_testuesugi.c

#   install the DSO file into the Apache installation
#   and activate it in the Apache configuration
install: all
	$(APXS) -i -a -n 'testuesugi' mod_testuesugi.so

#   cleanup
clean:
	-rm -f mod_testuesugi.o mod_testuesugi.so

#   simple test
test: reload
	lynx -mime_header http://localhost/testuesugi

#   reload the module by installing and restarting Apache
reload: install restart

#   the general Apache start/restart/stop procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

